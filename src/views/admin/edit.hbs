<form action='/admin/post/edit/{{post._id}}' method='POST'>
  <h1>{{title}}</h1>
  <div class='mb-3'>
    <label for='title' class='form-label'>Название новости</label>
    <input
      type='text'
      class='form-control'
      name='title'
      value='{{post.title}}'
    />
  </div>
  <div class='mb-3'>
    <label for='text' class='form-label'>Текст новости</label>
    <input type='text' class='form-control' name='text' value='{{post.text}}' />
  </div>
  <div class='form-check'>
    {{#if post.isVisible}}
      <input
        class='form-check-input'
        type='checkbox'
        value="{{post.isVisible}}"
        checked
        name='isVisible'
      />
    {{else}}
      <input class='form-check-input' type='checkbox' name='isVisible' value="true" />
    {{/if}}
    <label class='form-check-label' for='isVisible'>
      Видимость
    </label>
  </div>

  <input type='hidden' name='_csrf' value='{{csrfToken}}' />

  <button type='submit' class='btn btn-primary'>Извенить новость</button>
</form>